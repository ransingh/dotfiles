# Unix

alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"

alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"
alias e='$EDITOR'
alias v='$VISUAL'

# List only directories
alias lsd='ls -l | grep "^d"'

# Easier navigation: .., ..., ~ and -
alias ..="cd .."
alias cd..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

# Shortcuts to Desktop, Dropbox, Downloads, Workspace
alias db="cd ~/Documents/Dropbox"
alias doc="cd ~/Documents"
alias dl="cd ~/Downloads"
alias dk="cd ~/Desktop"
alias proj="cd ~/projects"
alias dot="cd ~/dotfiles"

# i <3 u cask
alias cask='brew cask'

# be nice
#alias please=sudo
alias hosts='sudo $EDITOR /etc/hosts'   # yes I occasionally 127.0.0.1 twitter.com ;)

# GIT STUFF

# Undo a `git push`
#alias undopush="git push -f origin HEAD^:master"

# git root
#alias gr='[ ! -z `git rev-parse --show-cdup` ] && cd `git rev-parse --show-cdup || pwd`'

# git add, checkout
alias ga="git add"
alias gcd="git checkout --"
alias gco="git checkout"
alias gcb="git checkout -b"

# git diff
alias gd='git diff --word-diff'
alias gdc='git diff --cached'
#alias git='hub'

# git log
alias gl='git log --name-status'
alias gls='git log --graph --pretty=format:'\''%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset'\'' --abbrev-commit --date=relative'

# git pull & push
alias gp='git pull'
alias gpr='git pull --rebase'
alias gpws='gss && gp && gsp'
alias gprp="git pull --rebase && git push"
alias gps='git push'
#alias gpsu='git push -u origin HEAD'

# git stash
alias gss='git stash'
alias gsa='git stash apply'
alias gsl='git stash list'
alias gsp='git stash pop'

# git grep
alias gg='git grep -n $1'

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ifconfig getifaddr en1"
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"

# All the dig info
alias dig="dig +nocmd any +multiline +noall +answer"

# Flush Directory Service cache
alias flush="dscacheutil -flushcache"

# Trim new lines and copy to clipboard
#alias trimcopy="tr -d '\n' | pbcopy"

# Recursively delete `.DS_Store` files
alias cleanup="find . -name '*.DS_Store' -type f -ls -delete"

# File size
alias fs="stat -f \"%z bytes\""

# Empty the Trash on all mounted volumes and the main HDD
alias emptytrash="sudo rm -rfv /Volumes/*/.Trashes; rm -rfv ~/.Trash"

# Bundler
alias b="bundle"
alias be="bundle exec"
alias rspec='be rspec'
alias cuke='be cucumber'
alias rc='be rails c'
alias rs='be rails s'
alias dbr='rake db:reset'
alias nodp='bundle --path=.gems --no-deployment'

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias m="migrate"
alias rk="rake"
alias rkt="rake -T"

# jasmine rake tasks
alias rja="rake jasmine:run"
alias rjs="rake jasmine:setup"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
